<div class="text-center pt-5">
  <h2 class="pt-5">ユーザー編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group pt-3">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前"%>
    </div>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"%>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "新しいパスワード" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "新しいパスワード" %>
    </div>

    <div class="form-group">
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "現在のパスワード" %>
    </div>

    <button class="btn btn-info" type="submit">変更する</button>
  <% end %>

  <%= link_to "戻る", href="/" %>

</div>