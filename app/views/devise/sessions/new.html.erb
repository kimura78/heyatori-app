<div class="pt-5">  
  <div class="text-center pt-5">
    <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <p class="alert text-center text-danger"><%= alert %></p>

    <div class="form-group pt-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"%>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :ログインしたままにする %>
      </div>
    <% end %>

    <button class="btn btn-info" type="submit">ログイン</button>
  <% end %>

  <%= render "devise/shared/links" %>
</div>